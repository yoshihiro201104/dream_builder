<h1>グループ一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>グループ名</th>
      <th>詳細</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to '詳細', admin_group_path(group) %></td>
        <td>
          <%= link_to '削除', admin_group_path(group), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
