<div class="container mt-4">
  <h3 class="text-center"><%= @goal.user.name %> さんの目標</h3>

  <div class="text-center my-3">
    <% if @goal.image.attached? %>
      <%= image_tag @goal.image, class: "img-fluid rounded shadow", style: "max-width: 400px;" %>
    <% else %>
      <%= image_tag 'no_image.jpg', class: "img-fluid rounded shadow", style: "max-width: 400px;" %>
    <% end %>
  </div>

  <h3 class="mt-4">編集画面</h3>

  <%# バリデーションエラーメッセージ表示 %>
  <% if @goal.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @goal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card p-4 shadow-sm">
    <%= form_with model: @goal, url: admin_goal_path(@goal), method: :patch do |f| %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :goal, "目標", class: "form-label" %>
          <%= f.text_field :goal, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :image, "目標のイメージ", class: "form-label" %>
          <%= f.file_field :image, class: "form-control", accept: "image/*" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :target_date, "いつまでに", class: "form-label" %>
          <%= f.date_field :target_date, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :monthly_goal_3, "3か月目の目標", class: "form-label" %>
          <%= f.text_field :monthly_goal_3, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :monthly_goal_2, "2か月目の目標", class: "form-label" %>
          <%= f.text_field :monthly_goal_2, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :monthly_goal_1, "1か月目の目標", class: "form-label" %>
          <%= f.text_field :monthly_goal_1, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :weekly_goal, "週目標", class: "form-label" %>
          <%= f.text_field :weekly_goal, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :action, "アクション", class: "form-label" %>
          <%= f.text_field :action, class: "form-control" %>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= f.submit '更新', class: 'btn btn-primary px-4' %>
      </div>
    <% end %>
  </div>
</div>
