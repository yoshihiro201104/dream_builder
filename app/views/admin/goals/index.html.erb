<h1>管理者用目標一覧</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>目標ID</th>
      <th>目標</th>
      <th>ユーザー名</th>
    </tr>
  </thead>
  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.id %></td>
        <td>
          <%= link_to goal.goal, admin_goal_path(goal), class: 'text-primary' %>
        </td>
        <td>
          <%= link_to goal.user.name, admin_user_path(goal.user), class: 'text-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

