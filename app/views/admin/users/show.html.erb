<h1>管理者用ユーザー詳細</h1>


<table>
  <tr>
    <th>ユーザーID</th>
      <td><%= @user.id %></td> <!-- ユーザーIDを表示するためのラベル -->
  </tr>
  <tr>
    <th>名前</th>
      <td><p><%= @user.name %></p></td>
  </tr>
  <tr>
    <th>メール</th>
      <td><p><%= @user.email %></p></td>
  </tr>
    <tr>
<th>ステータス</th>
<td>
  <% if @user.is_active %>
    <p class="status active">有効</p>
  <% else %>
    <p class="status inactive">退会</p>
  <% end %>
</td>

</table>

<!-- 編集ボタン -->
<%= link_to '編集', edit_admin_user_path(@user), class: 'button' %>
<!-- 戻るボタン -->
<%= link_to '戻る', admin_users_path(@user), class: 'button' %>

<p>Find me in app/views/admin/users/show.html.erb</p>
