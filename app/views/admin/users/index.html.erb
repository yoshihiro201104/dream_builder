<h1>管理者用ユーザー一覧</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メール</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admin_user_path(user.id), class: 'btn btn-link' %></td>
        <td><%= user.email %></td>
        <td>
          <span class="<%= user.is_active ? 'active' : 'inactive' %>">
            <%= user.is_active ? '有効' : '退会' %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

