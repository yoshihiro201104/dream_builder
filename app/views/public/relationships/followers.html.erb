<%# app/views/public/relationships/followers.html.erb %>

<h2 class="mb-4 text-primary">
  <%= current_user.name %>さんのフォロワー
</h2>

<% if @users.any? %>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to user.name, user_path(user), class: "text-decoration-none text-dark fw-bold" %>
        <%= link_to "プロフィール", user_path(user), class: "btn btn-outline-primary btn-sm" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-muted">フォロワーはいません。</p>
<% end %>

