<h2>ユーザー情報編集</h2>

<%# バリデーションのエラーメッセージ %>
<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, local: true do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>

  <label for="inputImage">プロフィール写真</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_field :email, id:"inputEmail", placeholder:"メールアドレス"%><br>

  <%= f.submit "変更を保存" %>
<% end %>

