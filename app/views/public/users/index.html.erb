<%=link_to "グループを作成する",new_group_path %> | 
<%=link_to "グループ一覧",groups_path %>

<div class="container mt-4">
  <h3 class="text-center mb-4">ユーザー一覧</h3>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark text-center">
        <tr>
          <th>アイコン</th>
          <th>ユーザー名</th>
          <th>詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="text-center">
            <td>
              <%= image_tag user.get_profile_image(50, 50), class: "rounded-circle border border-secondary" %>
            </td>
            <td class="fw-bold"><%= user.name %></td>
            <td>
              <%= link_to "詳細", user_path(user), class: "btn btn-sm btn-outline-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
