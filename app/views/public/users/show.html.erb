<!-- ユーザーの詳細 -->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>ユーザーネーム:<%= @user.name %></p>

  <% unless @user.guest_user? %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

  <!-- ユーザーの投稿一覧 -->

<h3>目標一覧</h3>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>目標ID</th>
      <th>目標</th>
    </tr>
  </thead>
  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.id %></td>
        <td><%= link_to goal.goal, goal_path(goal), class: 'text-decoration-none' %></td>
      </tr>
    <% end %>
  </tbody>
</table>




