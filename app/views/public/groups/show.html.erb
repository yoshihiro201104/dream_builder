<div class='container px-5 px-sm-0'>
<%= flash[:notice] %>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>グループ詳細</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if @group.group_image.attached? %>
                <%= image_tag @group.group_image,size:"50x50" %>
              <% else %>
                <%= image_tag 'no_image', size: "50x50" %>
              <% end %>
            </td>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>

            <td> <%# グループに参加しているメンバーを表示 %>
              <%# groupとuserでアソシエーションを設定している為、@group.userでグループに所属しているuserを習得できる %>
              <% @group.users.each do |user| %>
              <%# リスト形式で名前を表示 %>
              <li style="list-style: none;"><%= user.name %></li>
              <% end %>
            </td>

            <%# グループ参加申請、脱退ボタン、および承認待ち状態を表示 %>
            <td>
              <% if @group.is_owned_by?(current_user) %>
                <%= link_to '編集', edit_group_path(@group), class: "btn btn-sm btn-success" %>
              <% elsif @group.includesUser?(current_user) %>
                <%= link_to 'グループを離れる', group_group_users_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
              <% elsif @group.group_users.find_by(user_id: current_user.id, status: "pending") %>
                <span class="btn btn-sm btn-warning">承認待ち</span>
              <% else %>
                <%= link_to '参加申請', group_group_users_path(@group), method: :post, class: "btn btn-sm btn-success" %>
              <% end %>
            </td>

            <%# 承認待ちボタン %>
            <% @permits.each do |permit| %>
              <tr>
                <td class="text-right">
                  <%= link_to '加入許可', group_group_users_path(@group, permit_id: permit.id), method: :patch, class: "btn btn-sm btn-success" %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>